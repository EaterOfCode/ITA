<Window x:Class="ITSA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Options.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <RichTextBox Height="64" Margin="10,10,10,0" VerticalAlignment="Top">
            <FlowDocument>
                <Paragraph Padding="0">
                    <Run FontSize="48" Language="nl-nl" Text="I"/>
                    <Run Text=" "/>
                    <Run Text="nstall"/>
                    <Run Text=" "/>
                    <Run FontSize="48" Language="nl-nl" Text="T"/>
                    <Run Text=" "/>
                    <Run Language="nl-nl" Text="hat"/>
                    <Run Text=" "/>
                    <Run FontSize="48" Text="S"/>
                    <Run Text=" "/>
                    <Run Language="nl-nl" Text="hit"/>
                    <Run Text=" "/>
                    <Run FontSize="48" Text="A"/>
                    <Run Text=" "/>
                    <Run Language="nl-nl" Text="lready"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <ScrollViewer Margin="10,80,10,10">
        <ItemsControl ItemsSource="{DynamicResource groups}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Expander  Header="{Binding Title}" IsExpanded="True">
                        <ItemsControl ItemsSource="{Binding}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Image Source="{Binding Icon}" Width="80" Height="80" HorizontalAlignment="Left" Margin="10"></Image>
                                        <Label Content="{Binding Title}" Margin="100,10,0,10" FontSize="19"></Label>
                                        <CheckBox Padding="0,0,20,0" HorizontalContentAlignment="Right" HorizontalAlignment="Right" VerticalContentAlignment="Center"></CheckBox>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
